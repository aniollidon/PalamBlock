{
    "manifest_version": 3,
    "name": "PalamBlock",
    "version": "1.0",
    "description": "Una extensió per bloquejar pàgines web específiques.",
    "permissions": [
      "activeTab",
     "storage", 
     "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "images/icon48.png",
        "64": "images/icon64.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "48": "images/icon48.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "blocked.html",
          "login.html",
          "login.js"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "Background": {
      "service_worker": "background.js"
    }
  }
  